<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AcessGallery.ViewModels"
             x:Class="AcessGallery.SettingsPage"
             Title="Configurações"
             SemanticProperties.Description="Tela de configurações do aplicativo">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label Text="Escolha uma opção de configuração:" 
                   FontSize="16" 
                   TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}"/>

            <Button Text="Configurações de IA" 
                    Command="{Binding NavigateToAiSettingsCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    HeightRequest="60"
                    FontSize="18"
                    FontAttributes="Bold"
                    SemanticProperties.Hint="Navegar para configurações de inteligência artificial"
                    AutomationProperties.Name="Botão Configurações de IA"/>

            <Button Text="Backup e Restauração" 
                    Command="{Binding NavigateToBackupSettingsCommand}"
                    BackgroundColor="SeaGreen"
                    TextColor="White"
                    HeightRequest="60"
                    FontSize="18"
                    FontAttributes="Bold"
                    SemanticProperties.Hint="Navegar para configurações de backup e restauração"
                    AutomationProperties.Name="Botão Backup e Restauração"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
