<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AcessGallery.ViewModels"
             x:Class="AcessGallery.SettingsPage"
             Title="Configurações"
             SemanticProperties.Description="Tela de configurações do aplicativo">

    <StackLayout Padding="20" Spacing="20">
        <Label Text="Opções de Backup" 
               FontSize="20" 
               FontAttributes="Bold"
               SemanticProperties.HeadingLevel="Level1"/>

        <Label Text="Faça o backup do banco de dados das descrições e álbuns para importar em outro dispositivo." 
               FontSize="14" 
               TextColor="Gray"/>

        <Button Text="Fazer Backup do Banco de Dados" 
                Command="{Binding BackupDatabaseCommand}"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                HeightRequest="50"
                SemanticProperties.Hint="Exportar o arquivo de banco de dados para compartilhar ou salvar"/>

        <BoxView HeightRequest="1" Color="Gray" Margin="0,10" />

        <Label Text="Restaurar Dados" 
               FontSize="20" 
               FontAttributes="Bold"
               SemanticProperties.HeadingLevel="Level1"/>

        <Label Text="Importe um backup anterior para recuperar seus álbuns e descrições. ATENÇÃO: Isso substituirá os dados atuais." 
               FontSize="14" 
               TextColor="Gray"/>

        <Button Text="Restaurar de Backup" 
                Command="{Binding RestoreBackupCommand}"
                BackgroundColor="DarkOrange"
                TextColor="White"
                HeightRequest="50"
                SemanticProperties.Hint="Importar um arquivo de backup e sobrescrever os dados atuais"/>
    </StackLayout>
</ContentPage>
