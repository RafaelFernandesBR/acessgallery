<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AcessGallery.ViewModels"
             xmlns:controls="clr-namespace:AcessGallery.Views.Controls"
             x:Class="AcessGallery.AlbumDetailPage"
             Title="{Binding Title}"
             SemanticProperties.Description="Detalhes do álbum e lista de fotos">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Renomear"
                     Command="{Binding RenameAlbumCommand}"
                     Order="Secondary"
                     SemanticProperties.Hint="Renomear este álbum" />
        <ToolbarItem Text="Adicionar Foto" 
                     Command="{Binding AddPhotoCommand}" 
                     Order="Primary" 
                     SemanticProperties.Hint="Adicionar uma nova foto a este álbum"/>
    </ContentPage.ToolbarItems>

    <Grid>
        <controls:PhotoGridControl Photos="{Binding Photos}"
                                   PhotoTappedCommand="{Binding NavigateToPhotoDetailCommand}"
                                   ShowEmptyView="True" />
    </Grid>
</ContentPage>
