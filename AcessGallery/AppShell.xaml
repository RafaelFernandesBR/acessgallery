<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AcessGallery.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AcessGallery"
    Title="AcessGallery">

    <TabBar>
        <Tab Title="Início" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>
        <Tab Title="Álbuns" Icon="albums.png">
            <ShellContent ContentTemplate="{DataTemplate local:AlbumsPage}" Route="AlbumsPage" />
        </Tab>
        <Tab Title="Configurações" Icon="settings.png">
            <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}" Route="SettingsPage" />
        </Tab>
    </TabBar>
</Shell>
