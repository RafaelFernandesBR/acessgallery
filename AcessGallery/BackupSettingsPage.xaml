<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AcessGallery.ViewModels"
             x:Class="AcessGallery.BackupSettingsPage"
             Title="Backup e Restauração">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">
             <Label Text="Gerencie os dados do aplicativo." 
                   FontSize="18" 
                   FontAttributes="Bold"
                   TextColor="{StaticResource Primary}"
                   SemanticProperties.HeadingLevel="Level1"/>

            <Label Text="Faça o backup do banco de dados das descrições e álbuns para importar em outro dispositivo." 
                   FontSize="14" 
                   TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}"/>

            <Button Text="Fazer Backup do Banco de Dados" 
                    Command="{Binding BackupDatabaseCommand}"
                    BackgroundColor="SeaGreen"
                    TextColor="White"
                    HeightRequest="50"
                    FontAttributes="Bold"
                    SemanticProperties.Hint="Exportar o arquivo de banco de dados para compartilhar ou salvar"
                    AutomationProperties.Name="Fazer Backup"/>

            <BoxView HeightRequest="1" Color="Gray" Margin="0,10" />

            <Label Text="Importe um backup anterior para recuperar seus álbuns e descrições. ATENÇÃO: Isso substituirá os dados atuais." 
                   FontSize="14" 
                   TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}"/>

            <Button Text="Restaurar de Backup" 
                    Command="{Binding RestoreBackupCommand}"
                    BackgroundColor="DarkOrange"
                    TextColor="White"
                    HeightRequest="50"
                    FontAttributes="Bold"
                    SemanticProperties.Hint="Importar um arquivo de backup e sobrescrever os dados atuais"
                    AutomationProperties.Name="Restaurar de Backup"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
